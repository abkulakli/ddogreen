{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build configuration",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "with-tests",
            "displayName": "Build with Tests",
            "description": "Build configuration with unit tests enabled",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "description": "Release build configuration",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "release-with-tests",
            "displayName": "Release with Tests",
            "description": "Release build with unit tests enabled",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "with-tests",
            "configurePreset": "with-tests"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "release-with-tests",
            "configurePreset": "release-with-tests"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "with-tests",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
